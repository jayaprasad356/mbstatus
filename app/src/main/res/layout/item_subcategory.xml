<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.marwadibrothers.mbstatus.models.product.ProductResponseData" />
    </data>

    <RelativeLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <com.marwadibrothers.mbstatus.weidget.roundedimageview.RoundedImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/black_dot"
            app:riv_border_color="@color/grey"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_corner_radius="@dimen/_7sdp" />

        <RelativeLayout
            android:id="@+id/rlPremium"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/black_rect">

            <com.marwadibrothers.mbstatus.weidget.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/premium_icon"
                app:riv_corner_radius="@dimen/_4sdp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>
