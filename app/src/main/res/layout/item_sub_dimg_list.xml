<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.marwadibrothers.mbstatus.models.home.FearuredImageData" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10ssp"
        android:orientation="vertical">

        <com.marwadibrothers.mbstatus.weidget.roundedimageview.RoundedImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/black_dot"
            app:riv_border_color="@color/grey"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_corner_radius="@dimen/_7sdp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/date_bg"
            android:fontFamily="@font/noto_serif_devanagari_condensed_bold"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_6ssp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlPremium"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/black_rect"
            android:visibility="gone">

            <com.marwadibrothers.mbstatus.weidget.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/premium_icon"
                app:riv_corner_radius="@dimen/_4sdp" />
        </RelativeLayout>


    </RelativeLayout>
</layout>
