<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_backarrow"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/llShare"
            android:layout_toRightOf="@+id/ivBack"
            android:fontFamily="@font/noto_serif_devanagari_condensed_bold"
            android:text="Sub Catagory Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivhide"
                android:layout_width="@dimen/_18ssp"
                android:layout_height="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@drawable/ic_restriction"
                android:visibility="gone"
                app:tint="@color/black" />


            <ImageView
                android:id="@+id/ivprofileselection"
                android:layout_width="@dimen/_18ssp"
                android:layout_height="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@drawable/profile_select_icon"
                android:visibility="gone"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/_18ssp"
                android:layout_height="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/ic_delete"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_download"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_share" />

            <LinearLayout
                android:id="@+id/llShowNextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/noto_serif_devanagari_condensed_bold"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:padding="@dimen/_1sdp"
                    android:rotation="180"
                    android:src="@drawable/ic_backarrow"
                    app:tint="@color/black" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>
